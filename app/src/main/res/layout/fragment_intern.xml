<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.InternFragment"
    android:background="#191e38">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linear_layout_tittle"
        android:layout_height="wrap_content"
        android:layout_marginTop="0sp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:layout_marginTop="20dp"
            android:id="@+id/arrowback7"
            android:clickable="true"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:translationZ="100sp" />


        <TextView
            android:id="@+id/membertitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Internship"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80sp">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:text="Cold mail are old, get internshipshere itself"
            android:textColor="@color/white"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginTop="40sp"
                android:layout_below="@+id/textView4"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:textAlignment="center"
                    android:text="Oppourtunity 1"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:textAlignment="center"
                    android:text="Oppourtunity 2"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:textAlignment="center"
                    android:text="Oppourtunity 3"
                    android:textColor="@color/white"
                    android:textSize="14sp" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/mainLayout"
                android:layout_marginTop="40sp"
                android:layout_below="@+id/textView4"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/internone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:textAlignment="center"
                    android:text="Members"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/interntwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:textAlignment="center"
                    android:text="Members"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/internthree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:textAlignment="center"
                    android:text="Members"
                    android:textColor="@color/white"
                    android:textSize="14sp" />


            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


</FrameLayout>